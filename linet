import requests
from bs4 import BeatifulSoup
parts = [484359, 484360, 484362, 484363, 484365, 484366, 484367, 484368]
for i in range(8):
    link = "https://litnet.com/ru/reader/uteshenie-angela-muzyki-b59737?c=" + str(parts[i])
    source = requests.get(link).text
    soup = BeautifulSoup(source)
    chapter = soup.find("div", class_ = 'reader-text font-size-medium').get_text()
    with open("Uteshenie_angela.txt", "a") as f:
        f.write(chapter)
